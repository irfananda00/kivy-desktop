#:kivy 1.7.1
<TextToSpeech>:
  orientation: "vertical"
  button_font_size: "30sp"
  padding: root.width * 0.02, root.height * 0.02

  # associate to python connection
  saywhat_text: saywhat_text

  Label:
    text: "Say This !"
    font_size: "45sp"
    size_hint: 1, None
    height: self.texture_size[1] + (2 * root.padding[1])
  TextInput:
    id: saywhat_text
    text: "Hello world !"
    font_size: "18sp"
  BoxLayout:
    orientation: "horizontal"
    size_hint: 1, None
    height: sayit_button.height
    Button:
      id: sayit_button
      text: "Say It !"
      font_size: root.button_font_size
      size_hint: 1, None
      height: self.texture_size[1] + (2 * root.padding[1])
      on_press: root.say_something(saywhat_text.text)
    Button:
      text: "Clear"
      font_size: root.button_font_size
      size_hint: 1, None
      height: self.texture_size[1] + (2 * root.padding[1])
      on_press: root.clear()
